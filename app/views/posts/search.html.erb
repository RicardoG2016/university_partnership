<div class="album text-muted col-md-12 row"> 
  <% if @post.length > 0 %>
    <div class=" search-results col-md-12">
      <h2 class="text-muted result-title header">Post Results</h2>
      <hr>
    </div>
    <hr>
    <% @post.each do |p| %>
      <div class="col-md-12">
        <div class="posts col-md-7"> 
          <p class="card-text post-text"><%= link_to p.body, p %></p>
          <p class="card-text post-text">By: <%= link_to p.group.university, group_path(p.group) %></p>
        </div>
      </div>
    <% end %>
    <hr>
  <% end %>
  <br>
  <% if @group.length > 0 %>
  <br>
    <div class=" search-results col-md-12">
      <h2 class="text-muted result-title header">Group Results</h2>
      <hr>
    </div>
    <hr>
    <% @group.each do |g| %>
      <div class="col-md-12">
        <div class="posts col-md-7">
          <p class="card-text post-text"><%= link_to g.university, g %></p>        
        </div>
      </div>
    <% end %>
    <hr>
  <% end %>
</div>