<div class="home-feed row">
  <div class="feed text-muted col-md-7">
    <% if @post.length > 0 %>
    <h3 id="feed-header" class="header">Current Feed</h4> 
      <div id="effects" class="posts col-md-12"> 
        <div class="edit-icons">
            <form>
              <input type="text" placeholder="Create new post..." class="submit-on-click" >
            </form>
        </div>
      </div>
      <br>
      <% @post.each do |p| %>  
        <div id="effects" class="posts col-md-12">                                  
        <%= link_to post_path(p) do %>
          <div>
            <div class="edit-icons">        
              <% if p.group == current_group %>
                <%= link_to edit_post_path(p), :method => :get do %>
                  <i class="material-icons edit-icon">edit_mode</i>
                <% end %>
                <%= link_to post_path(p), :method => :delete, data: { confirm: "Are you sure?"} do %>
                  <i class="material-icons edit-icon delete-icon">delete</i>
                <% end %>
              <% end %>
            </div>
            <h3 class="card-title"><%= link_to p.body.capitalize, p, class: "" %></h3>

            <span class="card-text post-text"><%= link_to p.group.university, group_path(p.group) %></span><br>             
            <hr>
            <%if p.liked_by current_group%>
              <%= link_to dislike_post_path(p), :method => :put do%>
                <div class="btn btn-default active"><i class="material-icons">thumb_up</i> <%=p.get_upvotes.size%></div>
              <%end%>
            <%else%>
              <%= link_to like_post_path(p), :method => :put do%>
                <div class="btn btn-default"><i class="material-icons">thumb_up</i> <%=p.get_upvotes.size%></div>
              <%end%>
            <%end%>
          </div>                  
        <% end %>
        </div>
      <% end %>
    <% else %>
      <p>No Posts yet </p>
    <% end %>
  </div>

  <div id="side-feed" class="col-md-5 text-muted">
      <h3 id="side-feed-header" class="header">Activity</h4>
      <ul class="collection">
        <li class="collection-item">New Post</li>
        <li class="collection-item">New Comment</li>
        <li class="collection-item">New Event</li>
      </ul>
  </div>

  <!-- chat button -->


</div>
