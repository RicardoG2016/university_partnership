<body class="gradient">
    <div id="login-form" class="container form-style" style="margin-top:130px;">
      <div class="row">
        <div class="col s12 m6">        
          <div class="card-panel m6 z-depth-5">          
            <h4 id="login-header" class="center">Log In</h4>  
              <div class="row">                  
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "col s12 m6") do |f| %>
                  <%= devise_error_messages! %>
                  <div class="col s12 m12">
                    <div class="row"> 
                      <div class="form-inputs input-field col s12 m12">
                        <i class="mdi-communication-email prefix"></i>
                        <%= f.label :email, :id => "icon_email" %>
                        <%= f.email_field :email, :id => "icon_email", autofocus: true, :class => "validate" %>
                      </div>                          
                    </div>
                  </div>

                  <div class="col s12 m12">
                    <div class="row">                  
                      <div class="form-inputs input-field col s12 m12">
                        <i class="mdi-action-account-circle prefix"></i>
                          <%= f.label :password, :id => "icon_password" %>
                          <%= f.password_field :password, :id => "icon_password", autocomplete: "off", autofocus: true, :class => "validate" %>
                      </div>
                    </div>
                  </div>

                  <div class="col s12 m12 login-btn">
                    <div class="row"> 
                      <div class="actions btn waves-effect waves-light center light-green accent-4">
                        <%= f.submit "Log in" %>
                      </div>                        
                    </div>
                  </div>
                  <div class="col s12 m12 login-btn">
                    <div class="row"> 
                      <span><%= render "devise/shared/links" %></span>
                    </div>
                  </div>                
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>