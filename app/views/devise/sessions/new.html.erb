<body class="teal lighten-2">

    <div class="container form-style" style="margin-top:100px;">
      <div class="row">
        <div class="col s12 m6">
          <div class="card-panel m6 z-depth-5">
            <h4 class="center">Log In</h4>  
            <br> 
              <div class="row">

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :class => "col s12 m6") do |f| %>
                    
                    <div class="col s12 m12">
                      <div class="row"> 
                        <div class="input-field col s12 m12">
                          <i class="mdi-communication-email prefix"></i>
                          <%= f.label :email, :class => "validate", :id => "icon_email" %>
                          <%= f.email_field :email, :class => "validate", :id => "icon_email", autofocus: true %>
                        </div>                          
                      </div>
                    </div>

                    <div class="col s12 m12">
                      <div class="row">                  
                        <div class="input-field col s12 m12">
                          <i class="mdi-action-account-circle prefix"></i>
                            <%= f.label :password, :class => "validate", :id => "icon_password" %>
                            <%= f.password_field :password, :class => "validate", :id => "icon_password", autocomplete: "off", autofocus: true %>
                        </div>
                      </div>
                    </div>

                    <div class="col s12 m12 login-btn">
                      <div class="row"> 
                        <div class="actions btn waves-effect waves-light center">
                          <%= f.submit "Log in" %>
                        </div>
                        
                      </div>
                    </div>
                    <div class="col s12 m12 login-btn">
                      <div class="row"> 
                        <span><%= render "devise/shared/links" %></span>
                      </div>
                    </div>                    
                  
                  <% end %>

            </div><!--col-->  
          </div><!--col-->
        </div><!--row-->
      </div><!--conatiner-->
    </div><!--row-->
  <!--card-->



</body>