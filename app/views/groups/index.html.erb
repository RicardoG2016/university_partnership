<div class="container">
  <div class="header">
    <h1 class="event-header text-muted">Current University Partners</h1>  
  </div>
  <div class="text-muted col-md-12 row"> 
    <% @groups.each do |group|%>      
      <div class="col-md-4 col-sm-12" >        
          <div class="card groups" id="effects">        
            <div class="card">              
              <div style="width: 100%, height: 70%;" class="card-image waves-effect waves-block waves-light">              
                <a href="/groups/<%=group.id%>"><img src="<%= group.image.url()%>"></a>
              </div>
                <div class="card-content">
                  <span class="card-title activator grey-text text-darken-4"><%= link_to group.university, group %><i class="material-icons right">more_vert</i></span>
                </div>
                <div class="card-reveal">
                  <strong class="card-title grey-text text-darken-4">
                    <%= link_to group.university, group %>
                    <i class="material-icons right">close</i>
                  </strong>
                  <p>President: <%= group.president %></p>
                  <p>Phone: <%= group.phone %></p>
                  <p>Email: <%= group.email %></p>
                  <p>Members: <%= group.member_count %></p>
                </div>               
            </div>            
          </div>
      </div>      
    <% end %>
    <br>
  </div>
</div>
